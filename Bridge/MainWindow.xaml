<Window x:Class="Bridge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minimap" Height="600" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenMapDialog" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Control" Command="Open" />
    </Window.InputBindings>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Command="Open" InputGestureText="Ctrl + O"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Load..." Click="MenuItem_Click" />
                <MenuItem Header="Load again" Click="MenuItem_Click" />
                <Separator />
                <MenuItem Header="Step" Click="MenuItem_Click" InputGestureText="F2" />
            </MenuItem>
        </Menu>
        <Canvas Name="canvas" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" >
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>
    </DockPanel>
</Window>
